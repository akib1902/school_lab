    <script>
    // hero section
document.getElementById('getStartedBtn').addEventListener('click', () => {
  alert("This button can scroll to your login section!");
});

// the rest
const username = document.getElementById('username');
    const password = document.getElementById('password');
    const usernameMsg = document.getElementById('usernameMsg');
    const passwordMsg = document.getElementById('passwordMsg');
    const form = document.getElementById('loginForm');


    username.addEventListener('input', () => {
        const value = username.value;
        const specialChar = /[^a-zA-Z0-9]/;

        if (value.length === 0) {
            usernameMsg.textContent = "Username is required.";
            usernameMsg.className = "message error";
        } else if (specialChar.test(value)) {
            usernameMsg.textContent = "❌ Username cannot contain special characters.";
            usernameMsg.className = "message error";
        } else if (value.length > 100) {
            usernameMsg.textContent = "❌ Username cannot exceed 100 characters.";
            usernameMsg.className = "message error";
        } else {
            usernameMsg.textContent = "✅ Username looks good.";
            usernameMsg.className = "message success";
        }
    });

    password.addEventListener('input', () => {
        const value = password.value;
        const upper = /[A-Z]/.test(value);
        const lower = /[a-z]/.test(value);
        const digit = /[0-9]/.test(value);
        const special = /[!@#$%^&*(),.?":{}|<>]/.test(value);

        let messages = [];
        if (upper) messages.push("✅ Contains uppercase letter");
        else messages.push("❌ Missing uppercase letter");

        if (lower) messages.push("✅ Contains lowercase letter");
        else messages.push("❌ Missing lowercase letter");

        if (digit) messages.push("✅ Contains digit");
        else messages.push("❌ Missing digit");

        if (special) messages.push("✅ Contains special character");
        else messages.push("❌ Missing special character");

        passwordMsg.innerHTML = messages.join("<br>");
        passwordMsg.className = "message";
    });


    form.addEventListener('submit', (e) => {
        const uname = username.value.trim();
        const pass = password.value;

        const validUsername = uname.length > 0 && uname.length <= 100 && /^[a-zA-Z0-9]+$/.test(uname);
        const validPassword = /[A-Z]/.test(pass) && /[a-z]/.test(pass) && /[0-9]/.test(pass) && /[!@#$%^&*(),.?":{}|<>]/.test(pass);

        if (!validUsername || !validPassword) {
            e.preventDefault();
            alert("Please fix the highlighted errors before submitting!");
        }
    });
    </script>

